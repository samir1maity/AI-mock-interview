model User {
  id            String      @default(uuid())
  name          String?
  email         String      @id @unique
  image         String?
  emailVerified DateTime?
  interviews    Interview[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Interview {
  id             String     @id @default(cuid())
  user           User       @relation(fields: [userEmail], references: [email]) // Relation using user email
  userEmail      String // Foreign key to User's email
  date           DateTime   @default(now())
  feedback       String?
  questions      Question[] // An interview has many questions
  jobRole        String
  jobDescription String
  yearOfExp      String
}

model Question {
  id           Int       @id @default(autoincrement())
  question_txt String
  user_answer  String?
  rating       String?
  feedback     String?
  interview    Interview @relation(fields: [interviewId], references: [id])
  interviewId  String // Foreign key to Interview
  createdAt    DateTime  @default(now())
}
